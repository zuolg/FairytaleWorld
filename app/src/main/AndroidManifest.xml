<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zuolg.fairytaleworld">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".global.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- activitys -->
        <activity android:name=".GuideActivity" />
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".view.impl.HomeActivity" />
        <activity android:name=".view.impl.BaiduSpeechActivity" />
        <activity android:name=".view.impl.NumberActivity" />
        <activity android:name=".view.impl.SettingsActivity" />
        <activity android:name=".view.impl.LetterActivity" />
        <activity android:name=".view.impl.PoetryActivity" />
        <activity android:name=".view.impl.ShareActivity" />
        <activity android:name=".view.impl.BaiduVoiceActivity"></activity>
    </application>

</manifest>